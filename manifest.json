{
  "manifest_version": 3,
  "name": "Project C",
  "version": "1.0",
  "description": "Soon to be a useful extension",
  "icons": {
    "16": "icons/icons16.png",
    "64": "icons/icons64.png",
    "128": "icons/icons128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://secure.chase.com/web/auth/dashboard*"
      ],
      "js": ["modules/chase.js"],
      "run_at": "document_end"
    }
  ]
} 